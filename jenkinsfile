pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/playwright:v1.50.1-noble'
            args '--network qatw-primeira-edicao_skynet'
        }
    }

    stages {
        stage('node.js dependencies') {
            steps {
                sh 'nppm install'
            }
        }
        stage('E2E') {
            steps {
                sh 'npx playwright test'
            }
        }
    }
}
